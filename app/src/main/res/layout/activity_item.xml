<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/acivity_item_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_item_banner_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">

            <RatingBar
                android:id="@+id/activity_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RatingBar"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"/>

            <TextView
                android:id="@+id/activity_item_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="@dimen/text_size_h1"
                android:textStyle="bold"
                android:text="Hotel Osijek"/>

            <TextView
                android:id="@+id/activity_item_subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Šamačka ulica 4\n31000 Osijek"/>

            <TextView
                android:id="@+id/activity_item_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In luctus maximus metus vitae mollis. Nunc in commodo lorem, quis rutrum lacus. Vestibulum iaculis velit sit amet velit aliquet tincidunt pellentesque in ante. Etiam sit amet arcu id orci elementum sodales. In vehicula, mauris eget tempus feugiat, mi dolor lacinia elit, eu finibus mauris nulla et ipsum. Sed consequat dictum risus vel tristique. Suspendisse eu nisi gravida, scelerisque orci dapibus, viverra nibh. Sed a orci mi. Quisque ornare sit amet mi eu dictum."/>

            <LinearLayout
                android:id="@+id/activity_item_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_item_gallery_item1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/activity_item_gallery_item2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/activity_item_gallery_item3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>