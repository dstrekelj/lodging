<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/acivity_item_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_item_banner_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@color/colorDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">

            <RatingBar
                android:id="@+id/activity_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/HollowStarRatingBar"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"/>

            <TextView
                android:id="@+id/activity_item_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_item_vertical_margin_small"
                android:textSize="@dimen/text_size_h1"
                android:textStyle="bold"
                android:text="@string/lipsum_short"/>

            <TextView
                android:id="@+id/activity_item_subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_item_vertical_margin_small"
                android:text="@string/lipsum_newline"/>

            <TextView
                android:id="@+id/activity_item_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_item_vertical_margin_medium"
                android:text="@string/lipsum_long"/>

            <LinearLayout
                android:id="@+id/activity_item_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_item_vertical_margin_large"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_item_gallery_item1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/colorDivider"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/activity_item_gallery_item2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/activity_item_gallery_item_margin"
                    android:layout_marginRight="@dimen/activity_item_gallery_item_margin"
                    android:background="@color/colorDivider"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/activity_item_gallery_item3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/colorDivider"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>