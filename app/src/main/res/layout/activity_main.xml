<?xml version="1.0" encoding="utf-8"?>

<!--

MainActivity contains a single ListView element listing entries from the "assets/lodgings.json"
document. ListView items are modelled after the "layout/activity_main_item.xml" layout.

-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.dstrekelj.smjestaj.MainActivity">

    <ListView
        android:id="@+id/activity_main_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorDivider"
        android:dividerHeight="1px"
        tools:listitem="@layout/activity_main_item"/>

</LinearLayout>
