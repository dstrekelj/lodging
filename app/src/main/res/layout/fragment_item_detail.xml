<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_item_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_banner_height"
        android:scaleType="centerCrop"
        android:src="@drawable/hotel_osijek"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_padding">

        <RatingBar
            android:id="@+id/fragment_item_detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/fragment_item_detail_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_size_h1"
            android:textStyle="bold"
            android:text="Hotel Osijek"/>

        <TextView
            android:id="@+id/fragment_item_detail_subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Šamačka ulica 4\n31000 Osijek"/>

        <TextView
            android:id="@+id/fragment_item_detail_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In luctus maximus metus vitae mollis. Nunc in commodo lorem, quis rutrum lacus. Vestibulum iaculis velit sit amet velit aliquet tincidunt pellentesque in ante. Etiam sit amet arcu id orci elementum sodales. In vehicula, mauris eget tempus feugiat, mi dolor lacinia elit, eu finibus mauris nulla et ipsum. Sed consequat dictum risus vel tristique. Suspendisse eu nisi gravida, scelerisque orci dapibus, viverra nibh. Sed a orci mi. Quisque ornare sit amet mi eu dictum."/>

    </LinearLayout>

</LinearLayout>