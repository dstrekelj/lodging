<?xml version="1.0" encoding="utf-8"?>

<!--

This is the layout for ActivityMain ListView items. It defines an image, a heading text, and two
separate lines of body text.

-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_main_item_padding"
    android:minHeight="@dimen/activity_main_item_height">

    <ImageView
        android:id="@+id/activity_main_item_image"
        android:layout_width="@dimen/activity_main_item_image_size"
        android:layout_height="@dimen/activity_main_item_image_size"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/activity_main_item_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activity_main_item_image"
        android:layout_toEndOf="@id/activity_main_item_image"
        android:layout_marginLeft="@dimen/activity_main_item_horizontal_margin"
        android:layout_marginStart="@dimen/activity_main_item_horizontal_margin"
        android:textSize="@dimen/text_size_h2"
        android:textStyle="bold"
        android:text="@string/lipsum_short"/>

    <TextView
        android:id="@+id/activity_main_item_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activity_main_item_image"
        android:layout_toEndOf="@id/activity_main_item_image"
        android:layout_below="@id/activity_main_item_heading"
        android:layout_marginLeft="@dimen/activity_main_item_horizontal_margin"
        android:layout_marginStart="@dimen/activity_main_item_horizontal_margin"
        android:layout_marginTop="@dimen/activity_main_item_vertical_margin"
        android:text="@string/lipsum_newline"/>

</RelativeLayout>